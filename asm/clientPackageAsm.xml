<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
	<id>client-dyst</id>
	<formats>
		<format>zip</format>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>resource/client</directory>
			<excludes>
				<exclude>launch.bat</exclude>
			</excludes>
			<outputDirectory>resource/client</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>resource/common</directory>
			<outputDirectory>resource/common</outputDirectory>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<outputDirectory>.</outputDirectory>
			<source>target/client.jar</source>
			<destName>client.jar</destName>
		</file>
		<file>
			<outputDirectory>.</outputDirectory>
			<source>resource/client/launch.bat</source>
			<destName>launch.bat</destName>
			<filtered>false</filtered>
		</file>
	</files>
</assembly>